  "keywords": ["gateway", "api", "nginx", "microservices", "dreamscape"],
  "author": "DreamScape Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.0",
    "redis": "^4.6.7",
    "jsonwebtoken": "^9.0.1",
    "swagger-ui-express": "^4.6.3",
    "winston": "^3.9.0",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "@types/jest": "^29.5.3",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0"
