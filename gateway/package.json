{
  "name": "dreamscape-gateway",
  "version": "1.0.0",
  "description": "DreamScape API Gateway - Single entry point for all client requests",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:e2e": "jest --config=jest.config.e2e.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
